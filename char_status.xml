<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/barbarian">
        <GridLayout
            android:id="@+id/gridLayout145"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4" >

            <ImageView
                android:id="@+id/swordStatus"
                android:layout_width="20dp"
                android:layout_height="70dp"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_row="0"
                android:layout_rowSpan="3"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/TextEspada"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_row="0"
                android:text="Espada utlizada:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff0000"
                android:singleLine="true" />

            <TextView
                android:id="@+id/espada"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_row="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/Textnivel"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_row="2"
                android:text="Nivel maximo alcançado:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff0000" />

            <TextView
                android:id="@+id/nivel"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_row="3"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/textDinheiro"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_row="4"
                android:text="Dinheiro $:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff0000" />

            <TextView
                android:id="@+id/dinheiro"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_row="5"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff" />


        </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:clickable="true"
        android:onClick="reset"
        android:id="@+id/buttonReset"
        android:layout_row="4"
        android:layout_column="2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hard Reset"
        android:clickable="true"
        android:onClick="hardReset"
        android:id="@+id/buttonHard"
        android:layout_row="1"
        android:layout_column="2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tips"
        android:clickable="true"
        android:onClick="tips"
        android:id="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="História"
        android:clickable="true"
        android:onClick="historia"
        android:id="@+id/historia" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="back"
        android:text="Voltar ao jogo"
        android:id="@+id/button2" />

</LinearLayout>
